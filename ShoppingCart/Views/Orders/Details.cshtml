@model ShoppingCart.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>@localizer["Details"]</h1>

<div>
    <h4>@localizer["Order"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-2">
            @localizer["Product Image"]
        </dt>
        <dt class="col-4">
            @localizer["Product Name"]
        </dt>
        <dt class="col-2">
            @localizer["Price"]
        </dt>
        <dt class="col-2">
            @localizer["Quantity"]
        </dt>
        <dt class="col-2">
            @localizer["Amount"]
        </dt>
    </dl>

    @foreach (var item in Model.OrderItems)
    {
        <dl class="row">
            <dd class="col-2">
                @if (@item.Product.ImgUrl != null)
                {
                    <img src="~/@item.Product.ImgUrl" width="100" height="100" style="object-fit:contain" />
                }
            </dd>
            <dd class="col-4">
                @Html.DisplayFor(m => item.Product.Name)
            </dd>
            <dd class="col-2">
                @Html.DisplayFor(m => item.Price)
            </dd>
            <dd class="col-2">
                @Html.DisplayFor(m => item.Quantity)
            </dd>
            <dd class="col-2">
                @Html.DisplayFor(m => item.Amount)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Index">@localizer["Back to List"]</a>
</div>
